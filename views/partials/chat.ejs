<div id="chat_div">
    <% for (var i = 15; i > 0; i--) { %>
        <% if (i > messages.length) { %>
            <br>
            <% if (messages.length == 0 && i == 3) { %>
                <p style="width: 100%; text-align: center;"><i>No Messages</i></p>
            <% } %>
        <% } else { %>
            <% if (messages[i - 1].username == username) { %>
                <p class="message me"><%= messages[i - 1].message %></p>
            <% } else { %>
                <p class="message"><b><%= messages[i - 1].username %></b> <%= messages[i - 1].message %></p>
            <% } %>
        <% } %>
    <% } %>
    <div class="container-fluid">
    <form id="message_form" action="/house" method="post">
        <input class="form-control" type="hidden" name="send_message" value="true" />
        <input class="form-control" id="message_box" type="text" name="message" placeholder="Message" autocomplete="off" />
        <br>
        <input class="btn btn-primary" class="form-control" id="send_button" type="submit" value="Send" />
    </form>
    </div>
</div>
